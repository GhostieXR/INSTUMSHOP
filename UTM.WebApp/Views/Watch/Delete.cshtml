@model UTM.Domain.Watch

@{
    ViewBag.Title = "Delete Watch";
    Layout = "../Shared/_AdminPanelLayout.cshtml";
}

<div class="container">
    <h2>Delete Watch</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            <p class="form-control-static">@Model.Name</p>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Brand)
            <p class="form-control-static">@Model.Brand</p>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Price)
            <p class="form-control-static">@Model.Price</p>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ImageUrl)
            <p class="form-control-static">@Model.ImageUrl</p>
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    }
</div>