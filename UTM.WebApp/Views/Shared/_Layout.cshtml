                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Testimonial", "Home")">Testimonial</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Contact", "Home")">Contact Us</a>
                        </li>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Login", "Login", "Account", new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Register", "Register", "Account", new { area = "" }, new { @class = "nav-link" })
                            </li>
                        }
                        else
                        {
                            if (User.IsInRole("Moderator") || User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "Watch")">Manage Watches</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "Category")">Manage Category</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "Brand")">Manage Brand</a>
                                </li>
                            }
                            <li class="nav-item">
                                @Html.ActionLink("Logout", "Logout", "Account", new { area = "" }, new { @class = "nav-link" })
                            </li>
                        }
                    </ul>

