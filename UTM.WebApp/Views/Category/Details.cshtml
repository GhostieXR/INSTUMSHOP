@model UTM.Domain.Category

@{
    ViewBag.Title = "Category Details";
    Layout = "../Shared/_AdminPanelLayout.cshtml";
}

<div class="container">
    <h2>Category Details</h2>

    <div class="form-group">
        @Html.LabelFor(model => model.CategoryId)
        <p class="form-control-static">@Model.CategoryId</p>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        <p class="form-control-static">@Model.Name</p>
    </div>

    <a href="@Url.Action("Edit", new { id = Model.CategoryId })" class="btn btn-primary">Edit</a>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
</div>